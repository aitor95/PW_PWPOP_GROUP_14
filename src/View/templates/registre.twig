{% extends "base.twig" %}
    {% block title %} PWPOP {% endblock %}
    {% block body %}
        <div class="wrapper">
            <div class="login-grid">
                <div class="logo"> <svg xmlns="http://www.w3.org/2000/svg" width="19.971" height="19.963" viewBox="0 0 19.971 19.963"><path d="M21.838,8.445h0s0,0,0,0h0a0,0,0,0,1,0,0h0a.809.809,0,0,0-.235-.228l-9.164-6.08a.834.834,0,0,0-.9,0L2.371,8.214A.79.79,0,0,0,2,8.9v6.16a.789.789,0,0,0,.131.448h0l0,0h0c0,.006.007.01.01.015v0h0s0,0,0,0a0,0,0,0,1,0,0,.823.823,0,0,0,.226.215l9.165,6.082a.795.795,0,0,0,.9,0L21.6,15.742a.8.8,0,0,0,.371-.685V8.9A.793.793,0,0,0,21.838,8.445ZM12.781,4.273l6.953,4.613L16.551,11,12.78,8.462V4.273Zm-1.592,0V8.462L7.418,11,4.237,8.887Zm-7.6,6.1,2.4,1.59L3.594,13.572v-3.2Zm7.6,9.311-6.96-4.617,3.195-2.15,3.765,2.5Zm.8-5.653L8.856,11.951l3.128-2.1,3.131,2.1Zm.8,5.653v-4.27l3.766-2.5,3.193,2.15Zm7.6-6.11-2.4-1.611,2.4-1.59Z" transform="translate(-2 -2)" fill="#3aaba7"/></svg> PWPOP</div>
                <h1 class="hack">Create Account</h1>
                <div class="row">

                    <form action="{{ base_url }}/registration" class="vol s12" method="post" onsubmit="return validaFormulario();">
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="name" type="text" class="validate" name="name" required>
                                <label for="name">Name</label>
                                <span class="helper-text"  id="message-name"></span>
                            </div>
                            <div class="input-field col s6">
                                <input type="text" name="username" id="username" class="validate" required>
                                <label for="username">Username</label>
                                <span class="helper-text" id="message-username"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="email" type="email" class="validate" name="email" required>
                                <label for="email">Email</label>
                                <span class="helper-text" data-error="Please enter a valid email address." id="message-email"></span>
                            </div>
                            <div class="input-field col s6">
                                <input type="text" id="datepicker" class="datepicker" name="birthDate">
                                <label for="datepicker">Birthdate</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="phone" type="tel" class="validate" name="phone" required>
                                <label for="phone">Phone Number</label>
                                <span class="helper-text" data-error="format: xxx xxx xxx" id="message-phone"></span>
                            </div>
                            <div class="file-field input-field col s6">
                                <div class="btn">
                                    <span>Image</span>
                                    <input type="file" name="files[]">
                                </div>
                                <div class="file-path-wrapper">
                                    <input class="file-path validate" id="file" name="files[]" type="text" placeholder="Choose an image">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <input id="password" type="password" class="validate" name="password" required>
                                <label for="password">Password</label>
                                <span class="helper-text" id="message-password"></span>
                            </div>
                            <div class="input-field col s6">
                                <input id="confirm-password" type="password" class="validate" name="passwordConfirm" required>
                                <label for="confirm-password">Confirm Password</label>
                                <span class="helper-text" id="message-confirm-password"></span>
                            </div>
                        </div>

                        <button class="waves-effect waves-light btn-large" type="submit" value="upload">Sign Up </button>

                    </form>
                </div>
            </div>
            <div class="right-grid">
                <div class="cross"><a href="{{ base_url }}/"><img src="{{ base_url }}/assets/img/dark_cross.png" alt=""></a></div>
                <h1>One of Us?</h1>
                <p>If you already have an account, just sign in. We've missed you!</p>
                <a href="{{ base_url }}/login" class="waves-effect waves-light btn-large white secondary">Sign In</a>
            </div>

        </div>


    {% endblock %}
