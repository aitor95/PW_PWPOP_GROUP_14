                        <a href="#" data-target="mobile-nav" class="sidenav-trigger"><i class="material-icons">menu</i></a>
                    </div>
                </div>
            </nav>
        </div>
        <ul class="sidenav" id="mobile-nav">
            <li><a href="{{ base_url }}/login">Sign In</a></li>
            <li><a href="{{ base_url }}/registre">Sign Up</a></li>
        </ul>

        <div class="slider">
            <ul class="slides">
                <li>
                    <img src="https://lorempixel.com/580/250/nature/1"> <!-- random image -->
                    <div class="caption center-align">
                        <h3>This is our big Tagline!</h3>
                        <h5 class="light grey-text text-lighten-3">Here's our small slogan.</h5>
                    </div>
                </li>
                <li>
                    <img src="https://lorempixel.com/580/250/nature/2"> <!-- random image -->
                    <div class="caption left-align">
                        <h3>Left Aligned Caption</h3>
                        <h5 class="light grey-text text-lighten-3">Here's our small slogan.</h5>
                    </div>
                </li>
                <li>
                    <img src="https://lorempixel.com/580/250/nature/3"> <!-- random image -->
                    <div class="caption right-align">
                        <h3>Right Aligned Caption</h3>
                        <h5 class="light grey-text text-lighten-3">Here's our small slogan.</h5>
                    </div>
                </li>
                <li>
                    <img src="https://lorempixel.com/580/250/nature/4"> <!-- random image -->
                    <div class="caption center-align">
                        <h3>This is our big Tagline!</h3>
                        <h5 class="light grey-text text-lighten-3">Here's our small slogan.</h5>
                    </div>
                </li>
            </ul>
        </div>

        <section id="search" class="section section-search teal darken-1 white-text center scrollspy">
            <div class="container">
                <div class="row">
                    <h3>Search Product</h3>
                    <div class="col s10">
                        <div class="input-field">

                            <input type="text" class="white grey-text autocomplete" id="autocomplete-input"
                                   placeholder="Something...">
                        </div>
                    </div>
                    <div class="col s2">
                        <button class="btn waves-effect waves-light btn-search" type="submit" name="action">Submit
                            <i class="material-icons right">send</i>
                        </button>
                    </div>

                </div>
            </div>
        </section>
        <footer class="section teal darken-2 white-text center">
            <p>PWPOP &copy; 2019 </p>
        </footer>

    {% endblock %}