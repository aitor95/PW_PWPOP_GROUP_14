                <h1>Sign in to POWPOP</h1>
                <div class="row">
                    <form class="vol s12" method="post" enctype="multipart/form-data">
                        <div class="row">
                            <div class="input-field col s12">
                                <input id="email" type="email" class="validate" name="email">
                                <label for="email">Email</label>
                                <span class="helper-text" id="message-email"></span>
                            </div>
                            <div class="input-field col s12">
                                <input type="password" name="password" id="password" class="validate">
                                <label for="password">Password</label>
                                <span class="helper-text" id="message-password"></span>
                            </div>
                        </div>

                        <label>
                            <input type="checkbox" class="filled-in"/>
                            <span>Remember Password</span>
                        </label>
                        <button class="waves-effect waves-light btn-large" type="submit" formaction="{{ base_url }}/user" formmethod="post">Sign In </button>

                    </form>
                </div>
            </div>
            <div class="right-grid">
                <div class="cross"><a href="{{ base_url }}/"><img src="{{ base_url }}/assets/img/dark_cross.png" alt=""></a></div>
                <h1>New Here?</h1>
                <p>Sign up and discover a great amount of new opportunities!</p>
                <a href="{{ base_url }}/registre " class="waves-effect waves-light btn-large white secondary">Sign Up</a>
            </div>

        </div>

    {% endblock %}
